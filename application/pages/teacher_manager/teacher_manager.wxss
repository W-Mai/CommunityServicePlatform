/* pages/teacher_manager/teacher_manager.wxss */

page{
  background-color: white;
  
}

.pubTile {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  align-items: center;
}

.pubTile .txt {
  font-size: 40rpx;
  height: 100%;
  position: relative;
  padding-left: 20rpx;
}

.pubTile .txt::before {
  display: block;
  width: 8rpx;
  height: 34rpx;
  background: #f04704;
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -15rpx;
}

.block-wrapper {
  overflow-x: hidden;
  margin: 35rpx 20rpx;
  padding: 20rpx 0rpx;
  box-shadow: 0rpx 10rpx 10rpx 2rpx aliceblue;
  border-radius: 25rpx;
  background-image: linear-gradient(135deg,#e4f8f8, #faf5fd);
}

.block-wrapper .toast-wrapper .each-toast {
  display: flex;

  justify-content: space-between;
  align-content: center;

  background-color: white;
  padding: 30rpx 60rpx;
  box-shadow: 5rpx 10rpx 15rpx 10rpx aliceblue;
  margin: 20rpx 20rpx;

  border-radius: 15rpx 15rpx 25rpx 25rpx;
  
  background-image: linear-gradient(135deg,#fEffff, #fffefb);
}

.block-wrapper .toast-wrapper .each-toast .title-wrapper {
  flex: 6;
}

.block-wrapper .toast-wrapper .each-toast .count-wrapper {
  flex: 3;
  display: flex;

  justify-content: space-evenly;
  align-content: center;
}

.block-wrapper .toast-wrapper .each-toast .count-wrapper .left-number {
  padding: 0rpx 5rpx;
}

.block-wrapper .toast-wrapper .each-toast .count-wrapper .right-number {
  padding: 0rpx 5rpx;
}