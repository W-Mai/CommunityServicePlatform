/* 搜索框 */
.ser{display: flex;
  height:70rpx;
  padding: 10rpx;
  box-shadow:3rpx 10rpx 20rpx #04adf018;
  background-color: #f9fcfd;
}
.pic{flex:1;}
.pic image{width:100%;height:100%;}
.input{
  flex:9;
  border-bottom: 1px solid rgba(151, 177, 211, 0.164);border-radius:25rpx;padding-left: 25rpx;padding-top: 10rpx;
  background-color:white;
}

.major{
  background-color: aliceblue;
  padding:10rpx 0rpx;
  
}
.majordif{
  /* display: flex; */
  padding-top:5rpx;
  padding-bottom: 5rpx;
  height: 150rpx;
  white-space: nowrap;
  /* justify-content: space-around; */
}
.major .box{
  display: inline-block;
  width: 100rpx;
  
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-bottom: 20rpx;
  text-align: center;padding: 10rpx;
  
  border-radius: 15rpx;
  background-color: white;
}
.major .box image{
  border-radius: 10rpx;
}
.filter-not-selected{
  margin-top: 20rpx;
  box-shadow: 1rpx 3rpx 20rpx rgba(102, 102, 102, 0.137);

  transition: 0.5s;
  transition-property: all;
  transition-duration: 0.3s;
  transition-timing-function: cubic-bezier(0, 0, 0.32, 1.26);
}
/* .filter-not-selected image{
  box-shadow: 1rpx 3rpx 20rpx rgba(102, 102, 102, 0.137);
} */
.filter-selected{
  margin-top: 16rpx;
  box-shadow: 0rpx 6rpx 18rpx rgba(102, 102, 102, 0.555);
  /* border:1rpx solid rgba(255, 166, 0, 0.432) ; */
  
  transition: 0.5s;
  transition-property: all;
  transition-duration: 0.3s;
  transition-timing-function: cubic-bezier(0, 0, 0.32, 1.26);
}
.filter-selected image{
  box-shadow: 0rpx 3rpx 10rpx rgba(102, 102, 102, 0.777);
  transition: inherit;
}

.major .pic{width:45rpx;height:45rpx;}
.major .text{font-size: 25rpx;}

.order-selector{
  display: flex;
  margin: 30rpx 30rpx;
  padding: 10rpx;
  box-shadow:3rpx 6rpx 30rpx #04adf028;

  justify-content: left;
  align-items: center;
}
.order-selector .order-selector-img{
  margin-left: 20rpx;
  width: 45rpx;
  height: 45rpx;
}
.order-fire{
  width: 100%;
  height: 100%;
}

.dynamic{background:rgb(247, 251, 255);margin: 90rpx 0; margin-top: 0rpx;}
.toast-wrapper{
  padding: 26rpx 26rpx;
  transition: 0.5s;
}
.info-toast{
  margin: 30rpx 0rpx;
  background-color: white;
  border-radius: 30rpx;
  box-shadow:3rpx 6rpx 30rpx #04adf01e;
}
.dyItem{display: flex;padding: 30rpx 0; justify-content: space-between; align-items: center;}
.dyItem .pic{width:150rpx;height:150rpx;}
.dyItem .pic image{width:100%;height:100%;}
.dyItem .text{
  width:440rpx;
  padding-left: 10rpx;
}
.dyItem .text .title{
  margin-left: 35rpx;
  font-size: 35rpx;
  font-weight: bold;
}
.dyItem .text .content{
  font-weight: lighter;
  margin-top: 10rpx;
  padding-right: 15rpx;
  font-size: 28rpx;
  display: -webkit-box;/*关键属性*/
 -webkit-line-clamp: 3;
 -webkit-box-orient: vertical;
 overflow: hidden;
 text-overflow:ellipsis
}
