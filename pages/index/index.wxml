<view class="banner">
	<swiper indicator-dots indicator-dots="rgba(255,255,255,0.5)" indicator-active-color="#fff" circular autoplay>
		<swiper-item>
			<image src="/image/1.jpg" mode="aspectFill"></image>
		</swiper-item>
		<swiper-item>
			<image src="/image/2.jpg" mode="aspectFill"></image>
		</swiper-item>
		<swiper-item>
			<image src="/image/3.jpg" mode="aspectFill"></image>
		</swiper-item>
	</swiper>
</view>

<view class="major">
	<scroll-view scroll-x class="majordif"  scroll-with-animation="true">
		<block wx:for="{{ascategories}}" wx:key="*this">
			<view class="box {{currentFilterIndex==index?'filter-selected':'filter-not-selected'}}" bindtap="filterOnClick" data-id="{{index}}">
				<!-- <navigator url="/pages/one/one"> -->
					<image class="pic" src="{{item.url}}" />
					<view class="text">{{item.name}}</view>
				<!-- </navigator> -->
			</view>
		</block></scroll-view>

</view>

