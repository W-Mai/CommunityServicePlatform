<view class="ser">
	<view class="pic">
		<image src="/images/_search.png"></image>
	</view>
	<view class="input">
		<input class="txt" placeholder="社团搜索" auto-focus cursor-spacing="100" confirm-type="search"></input>
	</view>
</view>

<view class="dynamic">
	<view class="toast-wrapper">
		<view class="pubTile">
			<view class="txt">社团简介</view>
			<navigator class="more">更多...></navigator>
		</view>

		<view class="dyMain">
			<block wx:for="{{infoData}}" wx:key="*this">
				<view class="info-toast">
					<navigator class="dyItem"  url = "/pages/main/main?id={{item._id}}" >
					<view class="pic">
						<image src="{{ item.thumbnail }}"  mode = "aspectFit"></image>
					</view>
					<view class="text">
						<view class="title"> 
							{{ item.name }}
						</view>
						<view class="content">
							{{ item.information }}
						</view>
					</view>
				
				</navigator>
				</view>
				
			</block>
		</view>
	</view>
</view>